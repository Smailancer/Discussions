<h1 class="is-2 has-text-grey"> Editing Reply </h1>

<%= simple_form_for([@discussion, @reply]) do |f| %>
<div class="field">
    <div class="control">
        <%= f.input :reply, input_html: { class: "textarea" }, wrapper: false, lable_html: {class: 'label'} %>
    </div>
</div>

<%= f.button :submit, 'Update reply', class: 'button is-info' %>
<% end %>